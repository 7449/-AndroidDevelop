<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_show_view_margin"
    app:cardCornerRadius="@dimen/item_show_view_radius">


    <TextView
        android:id="@+id/show_tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        android:drawableTop="@mipmap/ic_launcher"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:padding="@dimen/item_app_tv_padding"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/item_show_tv_size"
        tools:ignore="SmallSp" />
</androidx.cardview.widget.CardView>